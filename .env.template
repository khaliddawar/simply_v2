# TubeVibe Library - Environment Variables Template
# Copy this file to .env and fill in the values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=TubeVibe Library
APP_ENV=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=http://localhost:8000  # Update for production

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000  # Update to https://tubevibe.app for production

# =============================================================================
# AUTHENTICATION / JWT
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your_jwt_secret_key_here_generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# =============================================================================
# GOOGLE OAUTH (for Chrome Extension and Web Auth)
# =============================================================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# For Chrome Extension (different OAuth client)
EXTENSION_GOOGLE_CLIENT_ID=your_extension_google_client_id.apps.googleusercontent.com

# =============================================================================
# RAILWAY POSTGRESQL DATABASE
# =============================================================================
# Railway provides these automatically when you add PostgreSQL service
DATABASE_URL=postgresql://postgres:password@host:port/railway
PGHOST=your_db_host.railway.internal
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_db_password
PGDATABASE=railway

# =============================================================================
# PINECONE
# =============================================================================
# Get from: https://app.pinecone.io/organizations/-/projects/-/keys
PINECONE_API_KEY=pcsk_4PPMpJ_KkjCt1p4FzV4f2WXhKYWMRjiWyM1EnhQkJc4RnQDVwVJdpqSnpqTQS2dbGCDR2k
PINECONE_ENVIRONMENT=us-east-1  # or your region

# Pinecone Assistant Configuration
PINECONE_ASSISTANT_NAME=tubevibe-library

# =============================================================================
# PADDLE BILLING
# =============================================================================
# Get from: https://vendors.paddle.com/api-keys
PADDLE_API_KEY=your_paddle_api_key
PADDLE_ENVIRONMENT=sandbox  # sandbox or production

# Webhook signature verification
# Get from: https://vendors.paddle.com/notifications-center
PADDLE_NOTIFICATION_SECRET=your_paddle_notification_secret

# Product/Price IDs (from Paddle Dashboard)
PADDLE_PREMIUM_PRICE_ID=pri_your_premium_price_id
PADDLE_ENTERPRISE_PRICE_ID=pri_your_enterprise_price_id

# =============================================================================
# EMAIL SERVICE (Optional - for notifications)
# =============================================================================
# Using Postmark
POSTMARK_API_KEY=your_postmark_api_key
POSTMARK_FROM_EMAIL=noreply@tubevibe.app

# Or using SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@tubevibe.app

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_DAY=1000

# =============================================================================
# PLAN LIMITS
# =============================================================================
# Free Plan
FREE_MAX_VIDEOS=10
FREE_MAX_GROUPS=2
FREE_MONTHLY_SEARCHES=50
FREE_SUMMARY_ENABLED=false

# Premium Plan
PREMIUM_MAX_VIDEOS=-1  # Unlimited
PREMIUM_MAX_GROUPS=-1
PREMIUM_MONTHLY_SEARCHES=-1
PREMIUM_SUMMARY_ENABLED=true

# =============================================================================
# CORS SETTINGS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,https://tubevibe.app,https://www.tubevibe.app
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# SENTRY (Error Tracking - Optional)
# =============================================================================
SENTRY_DSN=your_sentry_dsn

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
MIXPANEL_TOKEN=your_mixpanel_token
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true to use mock services during development
USE_MOCK_PINECONE=false
USE_MOCK_PADDLE=false
USE_MOCK_DATABASE=false

# For local development without external services
ALLOW_NO_AUTH=false  # Set true only for local testing
